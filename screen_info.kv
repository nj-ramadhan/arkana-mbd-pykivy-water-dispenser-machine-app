#:kivy 2.1.0

<ScreenInfo>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

            MDBoxLayout:
                orientation: "vertical"
                padding: 0, 15

                MDLabel:
                    id: subtitle            
                    text: "WATER DISPENSER MACHINE"
                    bold: True
                    font_size: 72
                    color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# information layout
		MDBoxLayout:
			id: layout_info
			orientation: "vertical"
			size_hint_y: 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "INFORMATION"
				bold: True
				font_size: 48
				color: 0, 0, 0
				size_hint_y: 0.1

		MDBoxLayout:
			id: layout_info
			orientation: "vertical"
			size_hint_y: 0.75
			padding:10
			spacing:10
			
			MDTextField:
				text: "This is information text"


	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_choose_product
			icon: "water"
			text: "PRODUCT"
			font_size: 28
			size_hint: 0.25, 0.15
			pos_hint: {"center_x": .85, "center_y": .15}
			on_press: root.screen_choose_product()
				