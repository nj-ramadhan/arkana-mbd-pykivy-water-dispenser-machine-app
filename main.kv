#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_splash.kv
#:include screen_choose_product.kv
#:include screen_choose_payment.kv
#:include screen_operate_manual.kv
#:include screen_operate_auto.kv
#:include screen_info.kv

ScreenManager:
    id: screen_manager
    transition: NoTransition()
    Screen:
        name: 'screen_splash'
        ScreenSplash:
            app_window: app
            screen_manager: screen_manager
            screen_choose_product: screen_choose_product

    Screen:
        name: 'screen_choose_product'
        ScreenChooseProduct:
            id: screen_choose_product
            screen_manager: screen_manager
            screen_choose_payment: screen_choose_payment

    Screen:
        name: 'screen_choose_payment'
        ScreenChoosePayment:
            id: screen_choose_payment
            screen_manager: screen_manager

    Screen:
        name: 'screen_operate_manual'
        ScreenOperateManual:
            id: screen_operate_manual
            screen_manager: screen_manager

    Screen:
        name: 'screen_operate_auto'
        ScreenOperateAuto:
            id: screen_operate_auto
            screen_manager: screen_manager

    Screen:
        name: 'screen_info'
        ScreenInfo:
            id: screen_info
            screen_manager: screen_manager
                  
