#:kivy 2.1.0
<ScreenScanQr>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER DISPENSER MACHINE"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Logo_Main.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 2, 0.1

			MDLabel:
				text: "PEMBELIAN DARI APLIKASI"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		MDGridLayout:
			id: layout_products
			cols:1
			md_bg_color: app.theme_cls.accent_color
			row_force_default: True
			row_default_height: 100
			size_hint: 2, 0.65
			padding:20
			spacing:20

            MDLabel:
				text: "Silahkan Scan kode QR dari aplikasi Anda"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 32
            
            AnchorLayout:
                size_hint_y: None
                MDIcon:
                    icon: "qrcode-scan"
                    font_size : 128
                    halign: 'center'
                    valign: 'middle'    
            
            AnchorLayout:
                size_hint_y: None
                MDTextField:
                    hint_text: "Click disini, lalu scan kode QR Anda"
                    id: coupon
                    font_size: 12
                    multiline: False
                    # password: True
                    opacity: 1.0
                    size_hint_x: 0.2
                    on_text_validate: root.coupon_validate()

	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_cancel
			icon: "cancel"
			text: "CANCEL"
			font_size: 28
			size_hint: 0.4, 0.1
			pos_hint: {"center_x": .78, "center_y": .1}
			on_press: root.screen_choose_product()

			
				