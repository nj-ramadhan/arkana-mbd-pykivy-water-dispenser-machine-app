#:kivy 2.1.0

<ScreenChoosePayment>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

            MDBoxLayout:
                orientation: "vertical"
                padding: 0, 15

                MDLabel:
                    id: subtitle            
                    text: "WATER DISPENSER MACHINE"
                    bold: True
                    font_size: 72
                    color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   

		# choose payment layout
		MDBoxLayout:
			id: layout_info
			orientation: "vertical"
			size_hint_y: 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "CHOOSE PAYMENT"
				bold: True
				font_size: 48
				color: 0, 0, 0
				size_hint_y: 0.1
				
		MDBoxLayout:
			id: layout_choose_payment
			orientation: "vertical"
			size_hint_y: 0.75
			padding:10
			spacing:10

			MDBoxLayout:
				orientation: "vertical"
				GridLayout:
					cols:3
					row_force_default: True
					row_default_height: 350
					padding:50
					spacing:50

					MDCard:
						id: payment_gopay
						orientation: "vertical"
						size_hint: None, None
						size: "250dp", "200dp"
						ripple_behavior: True
						on_press: root.pay("GOPAY")

						Image:
							source:'asset/Logo_Gopay.png'
							size_hint_x: 1.2
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "GOPAY"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: payment_ovo
						orientation: "vertical"
						size_hint: None, None
						size: "250dp", "200dp"
						ripple_behavior: True
						on_press: root.pay("OVO")

						Image:
							source:'asset/Logo_Ovo.png'
							size_hint_x: 1.2
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "OVO"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: payment_direct
						orientation: "vertical"
						size_hint: None, None
						size: "250dp", "200dp"
						ripple_behavior: True
						on_press: root.pay("DIRECT")

						Image:
							source:'asset/Logo_Direct.png'
							size_hint_x: 1.2
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "DIRECT TRANSFER"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_choose_product
			icon: "cancel"
			text: "CANCEL"
			font_size: 28
			size_hint: 0.25, 0.15
			pos_hint: {"center_x": .85, "center_y": .15}
			on_press: root.screen_choose_product()
				