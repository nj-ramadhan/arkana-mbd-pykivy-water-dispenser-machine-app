#:kivy 2.1.0

<ScreenMaintenance>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER DISPENSER MACHINE"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 2, 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "MAINTENANCE SCREEN"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		MDBoxLayout:
			id: layout_maintenance
			orientation: "vertical"
			md_bg_color: app.theme_cls.accent_color
			size_hint: 2, 0.75
			padding:10
			spacing:10

			Image:
			    source:'asset/plant.png'
                size_hint_x: 0.9
                allow_stretch: True  

	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_valve_1
			icon: "valve"
			text: "VALVE 1"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.3, "center_y": .7}
			on_press: root.act_valve_1()

		MDFillRoundFlatIconButton:
			id: bt_valve_2
			icon: "valve"
			text: "VALVE 2"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.7, "center_y": .7}
			on_press: root.act_valve_2()

		MDFillRoundFlatIconButton:
			id: bt_pump_1
			icon: "pump"
			text: "PUMP 1"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.25, "center_y": .25}
			on_press: root.act_pump_1()

		MDFillRoundFlatIconButton:
			id: bt_pump_2
			icon: "pump"
			text: "PUMP 2"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.8, "center_y": .25}
			on_press: root.act_pump_2()

		MDFillRoundFlatIconButton:
			id: bt_open
			icon: "water"
			text: "OPEN"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.35, "center_y": .15}
			on_press: root.act_open()

		MDFillRoundFlatIconButton:
			id: bt_close
			icon: "close"
			text: "CLOSE"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.35, "center_y": .06}
			on_press: root.act_close()

		MDFillRoundFlatIconButton:
			id: bt_up
			icon: "arrow-up"
			text: "UP"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.15, "center_y": .15}
			on_press: root.act_up()

		MDFillRoundFlatIconButton:
			id: bt_down
			icon: "arrow-down"
			text: "DOWN"
			font_size: 14
			size_hint: 0.18, 0.08
			pos_hint: {"center_x": 0.15, "center_y": .06}
			on_press: root.act_down()

		MDFillRoundFlatIconButton:
			id: bt_exit
			icon: "logout"
			text: "EXIT"
			font_size: 28
			size_hint: 0.25, 0.15
			pos_hint: {"center_x": .8, "center_y": .1}
			on_press: root.exit()