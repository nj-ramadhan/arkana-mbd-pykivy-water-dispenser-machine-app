#:kivy 2.1.0

<ScreenChooseProduct>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER DISPENSER MACHINE"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 72
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 2, 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "CHOOSE PRODUCT"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 48
				color: 1, 1, 1
				size_hint_y: 0.1

		MDGridLayout:
			cols:3
			md_bg_color: app.theme_cls.accent_color
			row_force_default: True
			row_default_height: 300
			size_hint: 2, 0.75
			padding:40
			spacing:50

			MDCard:
				id: product_220ml
				orientation: "vertical"
				size_hint: None, None
				size: "420dp", "250dp"
				pos_hint: {"center_x": .5, "center_y": .5}
				ripple_behavior: True
				on_press: root.choose_payment(220)

				Image:
					source:'asset/220ml.png'
					size_hint_x: 3
					pos_hint: {"center_x": .5, "center_y": .5}
					allow_stretch: True 

				MDRelativeLayout:
					MDLabel:
						text: "220ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

			MDCard:
				id: product_330ml
				orientation: "vertical"
				size_hint: None, None
				size: "420dp", "250dp"
				pos_hint: {"center_x": .5, "center_y": .5}
				ripple_behavior: True
				on_press: root.choose_payment(330)

				Image:
					source:'asset/330ml.png'
					size_hint_x: 3
					pos_hint: {"center_x": .5, "center_y": .5}
					allow_stretch: True 

				MDRelativeLayout:
					MDLabel:
						text: "330ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

			MDCard:
				id: product_600ml
				orientation: "vertical"
				size_hint: None, None
				size: "420dp", "250dp"
				pos_hint: {"center_x": .5, "center_y": .5}
				ripple_behavior: True
				on_press: root.choose_payment(600)

				Image:
					source:'asset/600ml.png'
					size_hint_x: 3
					pos_hint: {"center_x": .5, "center_y": .5}
					allow_stretch: True 

				MDRelativeLayout:
					MDLabel:
						text: "600ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

			MDCard:
				id: product_1000ml
				orientation: "vertical"
				size_hint: None, None
				size: "420dp", "250dp"
				pos_hint: {"center_x": .5, "center_y": .5}
				ripple_behavior: True
				on_press: root.choose_payment(1000)

				Image:
					source:'asset/1000ml.png'
					size_hint_x: 3
					pos_hint: {"center_x": .5, "center_y": .5}
					allow_stretch: True 

				MDRelativeLayout:
					MDLabel:
						text: "1000ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_info
			icon: "information"
			text: "INFO"
			font_size: 28
			size_hint: 0.25, 0.15
			pos_hint: {"center_x": .85, "center_y": .15}
			on_press: root.screen_info()
				