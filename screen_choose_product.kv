#:kivy 2.1.0

<ScreenChooseProduct>:
    BoxLayout:
        orientation: "vertical"
		# header layout
        BoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			size_hint_y: 0.1

            BoxLayout:
                orientation: "vertical"
                padding: 0, 15

                Label:
                    id: subtitle            
                    text: "Water Dispenser Machine"
                    bold: True
                    font_size: 64
                    color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# setting layout
		BoxLayout:
			id: layout_choose_product
			orientation: "vertical"
			size_hint_y: 0.5
			padding:10
			spacing:10

			Label:
				text: "CHOOSE PRODUCT"
				bold: True
				font_size: 48
				color: 0, 0, 0
				size_hint_y: 0.1
				
			BoxLayout:
				orientation: "vertical"
				GridLayout:
					cols:3
					row_force_default: True
					row_default_height: 350
					padding:50
					spacing:50

					MDCard:
						id: product_250ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(250)

						Image:
							source:'asset/Mineral_Water.jpg'
							size_hint_x: 1.2
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "250ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: product_500ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(500)

						Image:
							source:'asset/Mineral_Water.jpg'
							size_hint_x: 1.2
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "500ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: product_750ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(750)

						Image:
							source:'asset/Mineral_Water.jpg'
							size_hint_x: 1.2
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "750ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: product_1000ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(1000)

						Image:
							source:'asset/Mineral_Water.jpg'
							size_hint_x: 1.2
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "1000ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

			MDRelativeLayout:
				MDFillRoundFlatIconButton:
					id: bt_screen_info
					icon: "information"
					text: "INFO"
					font_size: 28
					size_hint: 0.15, 0.25
					pos_hint: {"center_x": .85, "center_y": .5}
					on_press: root.screen_info()
				