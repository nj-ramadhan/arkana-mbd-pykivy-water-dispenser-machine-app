#:kivy 2.1.0

<ScreenChooseProduct>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

            MDBoxLayout:
                orientation: "vertical"
                padding: 0, 15

                MDLabel:
                    id: subtitle            
                    text: "WATER DISPENSER MACHINE"
                    bold: True
                    font_size: 72
                    color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_info
			orientation: "vertical"
			size_hint_y: 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "CHOOSE PRODUCT"
				bold: True
				font_size: 48
				color: 0, 0, 0
				size_hint_y: 0.1

		MDBoxLayout:
			id: layout_choose_payment
			orientation: "vertical"
			size_hint_y: 0.75
			padding:10
			spacing:10

			MDBoxLayout:
				orientation: "vertical"
				GridLayout:
					cols:3
					row_force_default: True
					row_default_height: 350
					padding:50
					spacing:50

					MDCard:
						id: product_250ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(250)

						Image:
							source:'asset/250ml.png'
							size_hint_x: 3
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "250ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: product_500ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(500)

						Image:
							source:'asset/500ml.png'
							size_hint_x: 3
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "500ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: product_750ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(750)

						Image:
							source:'asset/750ml.png'
							size_hint_x: 3
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "750ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

					MDCard:
						id: product_1000ml
						orientation: "vertical"
						size_hint: None, None
						size: "420dp", "250dp"
						pos_hint: {"center_x": .5, "center_y": .5}
						ripple_behavior: True
						on_press: root.choose_payment(1000)

						Image:
							source:'asset/1000ml.png'
							size_hint_x: 3
							pos_hint: {"center_x": .5, "center_y": .5}
							allow_stretch: True 

						MDRelativeLayout:
							MDLabel:
								text: "1000ml"
								adaptive_size: True
								color: "grey"
								pos: "12dp", "12dp"
								bold: True

	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_info
			icon: "information"
			text: "INFO"
			font_size: 28
			size_hint: 0.25, 0.15
			pos_hint: {"center_x": .85, "center_y": .15}
			on_press: root.screen_info()
				